            br
            //h3 Monitor. Optimze. Partner.
            h3 Instantly Profile Your Brand's Personality
            br
            br
            br
            //form#instant-profiler-form
            +autoForm collection="InstantProfiles" id="insertInstantProfileForm" type="normal"
              .input-group
                //input#instant-profiler-url.form-control(type="text", style="height: 60px;", placeholder="Website URL")
                +afFieldInput name="domain" style="height: 60px;" placeholder="Website URL"
