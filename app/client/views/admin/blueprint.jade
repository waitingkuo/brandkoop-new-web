template(name="adminBlueprint")

  +pageHeading title='Blueprint' category='Admin Dashboard'

  #blueprint
    .wrapper.wrapper-content.animated.fadeInRight
      .row
        .col-lg-12
          .ibox.float-e-margins
            //.ibox-title 
            //  h5 
            .ibox-content
              .row
                .col-lg-8.col-lg-offset-2
                  .text-center
                    h1 
                      b Example.com's BLUEPRINT

                    p Mantra
                    .form-group
                      input.form-control(type="text" value="e.g. Just do it.")

              br
              br
              br
              p *Branding Tip
              p Strive to make your brand a bridge between who your target customers are and who they want to become.

              //form#blueprint-menu(style="padding: 20px;")
              form#blueprint-menu(style="")
                +blueprintCoreBeliefs
                +blueprintCharacter
                +blueprintCoreValues
                +blueprintContentPlanner

template(name="blueprintCoreBeliefs")
  h1 Core beliefs
  section
    h3 What does "example.com" stand for?
    .row
      .col-lg-8
        .form-group
          //label 1.
          input.form-control(type="text", placeholder="e.g. Everything you can imagine is real.") 
        .form-group
          //label 2.
          input.form-control(type="text", placeholder="e.g. My body is my template.") 
        .form-group
          //label 3.
          input.form-control(type="text", placeholder="e.g. Family is the most important thing in life") 
        button.btn.btn-primary Add
      .col-lg-4

    br
    br
    h3 Idea Pad
    .row
      .col-lg-8
        .form-group
          textarea.form-control(rows="5", placeholder="Record core belief related thoughts here.")

    //button.btn.btn-primary Save



template(name="blueprintCharacter")
  h1 Character
  section
    .row
      .col-lg-6
        h3 Characters
        #character1.dd
          ol.dd-list
            li.dd-item
